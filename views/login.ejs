<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="./output.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>
<body>
  
    <div class="flex items-center justify-center h-screen min-h-screen bg-uvuPrimary">
      <div class="bg-white shadow-md rounded-lg p-8 w-full max-w-md">
        <h1 class="text-2xl font-bold text-center text-gray-700 mb-6">Login To Your Account</h1>
        
        <form class="space-y-4">
          <!-- username -->
          <div>
            <label for="username" class="block text-sm font-medium text-gray-600 mb-1">Username</label>
            <input
              id="userName"
              placeholder="Enter Your User Name"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-uvuLightGreen focus:outline-none"/>
          </div>

          <!-- password -->
          <div>
            <label for="username" class="block text-sm font-medium text-gray-600 mb-1">Password</label>
            <input
              id="password"
              placeholder="Enter Your Password"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-uvuLightGreen focus:outline-none"/>
          </div>

          <!-- submit btn -->
          <button type="submit" 
            class="w-full bg-uvuPrimary text-white py-2 rounded-lg 
            font-medium hover:bg-uvuMediumGreen focus:ring-2 focus:ring-uvuLightGreen 
            focus:outline-none">
            Submit
          </button>
        </form>
      </div>
    </div>
    <script src="./js/login.js"></script>
</body>
</html>